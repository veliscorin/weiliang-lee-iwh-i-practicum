doctype html
html
  head
    title= title
    style.
      /* General Body Styling */
      body {
        font-family: Arial, sans-serif;
        background-color: #e0f7fa;
        padding: 20px;
        text-align: center;
      }
      /* Form Styling */
      form {
        width: 600px;
        margin: auto;
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .form-group {
        display: flex;
        justify-content: space-between;  /* Distribute space between label and input */
        margin-bottom: 20px;
      }

      label {
        width: 30%;                  /* Label takes 30% of the row */
        text-align: left;            /* Align text to the left */
        font-weight: bold;
      }

      input, select {
        width: 65%;                  /* Input takes 65% of the row */
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;      /* Ensure padding doesn‚Äôt affect width */
      }

      button {
        background-color: #00796b;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        margin-top: 20px;
      }

      button:hover {
        background-color: #004d40;
      }

      a {
        display: block;
        margin-top: 15px;
        color: #00796b;
        text-decoration: none;
      }
  
